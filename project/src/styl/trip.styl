#trip {

    .title {
        position: relative

        > div {
            position: absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)

            > span {
                white-space: nowrap
            }

            .to {
                icon_cheminot('right', blue)

                &::before {
                    padding: 10px
                }
            }
        }
    }

    #wrapper {
        position: absolute
        bottom: 0
        overflow: hidden
        width: 100%
    }

    .stops {
        width: 100%

        > li {
            position: relative

            .waiting {
                margin-top: 4px
                display: block
            }

            &:first-child .right:before {
                color: green
            }

            &:last-child .right:before {
                color: orange
            }

            &.changement .right:before {
                color: blue
            }

            .time, .stop {
                position: absolute
                top: 50%
                transform: translateY(-50%)
            }

            .left, .right {
                position: relative
                width: 44vw
                height: 100%
                display: inline-block
            }

            .right {
                icon_cheminot('circle', blue)

                &::before {
                    position: absolute
                    left: -0.6em
                    top: 50%
                    transform: translateY(-50%)
                    color: grey
                    background: #FFF
                }
            }

            .time {
                right: 12%

                .alarm-clock {
                    icon_cheminot('clock', grey-dark)
                }

                .at {
                    padding-left: 4px
                    position: relative
                    color: grey-dark
                }
            }

            .stop {
                left: 12%

                .name {
                    color: grey-dark
                }

                .waiting {
                    color: grey-light
                }
            }
        }
    }
}
