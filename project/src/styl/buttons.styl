@import 'colors';
@import 'icons';

clear-button() {
    margin: 0
    padding: 0
    border: none
    background: transparent
    outline: none
}

reset_button() {
    clear-button()
    icon_cheminot('cross', grey-light)
}

backward_button() {
    clear-button()
    icon_cheminot('arrow-left', white)
}

forward_button(enabled) {
    clear-button()

    if enabled {
        icon_cheminot('arrow-left', blue, 180deg)
    }

    if (!enabled) {
        icon_cheminot('arrow-left', grey-light, 180deg)
    }
}
