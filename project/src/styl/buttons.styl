@import 'colors';
@import 'icons';

clear-button() {
    margin: 0
    padding: 0
    border: none
    background: transparent
    outline: none
    cursor: pointer
}

reset_button() {
    clear-button()
    icon_cheminot('cross', grey-light)
    width: size(24px);
}

backward_button() {
    clear-button()
    icon_cheminot('left', white)
}

up_button(color=white) {
    clear-button()
    icon_cheminot('up', color)
}

down_button(color=white) {
    clear-button()
    icon_cheminot('down', color)
}

forward_button(color=grey) {
    clear-button()
    icon_cheminot('right', color, 180deg)
}
