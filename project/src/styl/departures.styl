pin() {
    .pin {
        position: absolute
        top: 0
        bottom: 0
        left: 0
        width: 10%
        background: #FFF
        padding: 10px

        icon_cheminot('pin', #FFF)

        &::before {
            font-size: 40px
            color: green
            position: absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)
        }
    }
}

#departures {

    > .trace {
        position: fixed
        bottom: 0
        width: 100%
        text-align: center
        background: green
        color: white
        box-shadow: 0 -1px 1px rgba(0,0,0,0.1)
        z-index: 2

        &.end {
            background: blue

            .pin::before {

                color: blue
            }
        }

        > span {
            display: inline-block
        }

        .label {
            margin-left: 10%
            width: 200px
            white-space: nowrap
            overflow: hidden
            text-overflow: ellipsis
            position: relative
        }

        pin()
    }

    .empty-loading {
        z-index: 1
        position: absolute
        top: 15vh
        color: blue
        text-align: center
        width: 100%

        .train {
            opacity: 0
            transition: 0.2s
            display: inline-block
            height: 40vh

            &.fade-in {
                opacity: 1
            }
        }

        .label {
            margin-top: 30px
            position: relative
            display: inline-block
            line-height: 1.2
        }
    }

    #wrapper {
        background: grey-blue
        position: absolute
        width: 100%
        overflow: hidden
        bottom: 0

        /* PULL AND REFRESH */
        &.loading {
            background: green
            border-bottom-color: green

            .pull-up {
                color: white

                &.trace {
                    pin()
                }
            }
        }

        &.flip:not(.loading) {
            background: blue
            border-bottom-color: blue

            .pull-up {
                color: white
            }
        }

        #scroller {
            position: absolute
            width: 100%
        }

        ul {
            position: relative
            z-index: 2

            > li {
                margin: -1px
                border-bottom: 2px solid grey-blue
                box-sizing: border-box
                color: dark-blue
                background: #FFF
                transform: translate3d(0,0,0)

                .wrapper {
                    margin: auto
                }

                &.fake {
                    visibility: hidden
                }

                &.day {
                    text-align: center
                    background: grey-blue
                    color: dark-blue
                }

                .meta {
                    position: relative

                    .changements {
                        padding: 0 4px
                        color: grey-light
                        icon_cheminot('split', grey-light)
                    }

                    .duration {
                        display: inline-block
                        right: 0
                        position: absolute

                        .egg-timer {
                            vertical-align: -2px
                            icon_cheminot('duration', grey-light)
                        }
                    }
                }

                .start-end {
                    position: relative

                    .start {
                        display: inline-block
                        padding-left: 5%
                    }
                }

                .alarm-clock {
                    min-width: 25px
                    display: inline-block
                    icon_cheminot('clock', grey-light)
                }

                .to {
                    icon_cheminot('right', blue)
                    margin: 0 5px 0 5px
                    vertical-align: 2px
                }
            }

            .pull-up {
                text-align: center
                background: transparent
                border-bottom: none
            }
        }
    }
}
