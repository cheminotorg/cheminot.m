pin() {
    .pin {
        position: absolute
        top: 0
        bottom: 0
        left: 0
        width: 10%
        background: #FFF
        padding: size(10px)

        icon_cheminot('pin', #FFF, size(40px))

        &::before {
            color: green
            position: absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)
        }
    }
}

#departures {

    > .trace {
        position: fixed
        bottom: 0
        width: 100%
        text-align: center
        background: green
        color: white
        box-shadow: 0 -1px 1px rgba(0,0,0,0.1)
        z-index: 2
        padding: size(16px) 0
        font-size: size(20px)

        &.end {
            background: blue

            .pin::before {

                color: blue
            }
        }

        > span {
            display: inline-block
        }

        .label {
            margin-left: 10%
            width: size(200px)
            white-space: nowrap
            overflow: hidden
            text-overflow: ellipsis
            position: relative
        }

        pin()
    }

    .empty-loading {
        z-index: 1
        position: absolute
        top: 15vh
        color: blue
        text-align: center
        width: size(230px)
        transform: translateX(-50%)
        left: 50%

        .train {
            opacity: 0
            transition: 0.2s
            display: inline-block
            height: 40vh

            &.fade-in {
                opacity: 1
            }
        }

        .label {
            margin-top: size(30px)
            position: relative
            display: inline-block
            line-height: 1.2
            font-size: size(18px)
        }
    }

    #wrapper {
        background: grey-blue-light
        position: absolute
        width: 100%
        overflow: hidden
        bottom: 0

        /* PULL AND REFRESH */
        &.loading {
            background: green
            border-bottom-color: green

            .pull-up {
                color: white

                &.trace {
                    pin()
                }
            }
        }

        &.flip:not(.loading) {
            background: blue
            border-bottom-color: blue

            .pull-up {
                color: white
            }
        }

        #scroller {
            position: absolute
            width: 100%
        }

        ul {
            position: relative
            z-index: 2

            > li {
                margin: size(-1px)
                border-bottom: size(2px) solid grey-blue
                box-sizing: border-box
                color: dark-blue
                background: #FFF
                transform: translate3d(0,0,0)

                .wrapper {
                    max-width: size(400px)
                    margin: auto
                }

                &.fake {
                    visibility: hidden
                }

                &.day {
                    text-align: center
                    background: grey-blue
                    color: dark-blue
                    padding: size(12px) 0
                    font-size: size(16px)
                }

                .meta {
                    position: relative
                    font-size: size(18px)
                    padding: size(10px) 0

                    .changements {
                        padding: 0 size(4px)
                        color: grey-light
                        icon_cheminot('split', grey-light)
                    }

                    .duration {
                        display: inline-block
                        right: 0
                        position: absolute

                        .egg-timer {
                            vertical-align: size(-2px)
                            icon_cheminot('duration', grey-light)
                        }
                    }
                }

                .start-end {
                    position: relative
                    font-size: size(32px)
                    padding: 0 0 size(8px) 0

                    .start {
                        display: inline-block
                        padding-left: 5%
                        width: size(140px)
                    }
                }

                .alarm-clock {
                    min-width: size(25px)
                    display: inline-block
                    icon_cheminot('clock', grey-light, size(23px))
                }

                .to {
                    icon_cheminot('right', blue, size(21px))
                    margin: 0 size(5px) 0 size(5px)
                    vertical-align: size(2px)
                }

                &:not(.pull-up):not(.day) {
                    padding: 0 size(14px)
                }

                &.pull-up {
                    text-align: center
                    background: transparent
                    border-bottom: none
                    padding: size(16px) 0
                    font-size: size(20px)
                }
            }
        }
    }
}
