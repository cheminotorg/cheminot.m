@import 'colors';

.modals {
    background: rgba(0, 0, 0, 0.55);
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 4;
    display: none

    &.fade-in {
        display: flex
        align-items: center
    }

    .modal {
        border-radius: 0.2em
        display: none
        z-index: 4
        background: #FFF
        color: android-blue
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        position: absolute

        .title {
            border-bottom: 1px solid #3CB6E3
        }

        &.fade-in {
            display: block
        }

        button {
            text-transform: uppercase
            display: inline-block
            border: none
            outline: none
            background: transparent
            padding: 10px
            color: android-green
        }

        .actions {
            border-top: 1px solid rgba(android-green, 0.1)
            padding: 4px 10px 0 10px
            text-align: center

            .ok {
                width: 28%
            }
        }
    }

    .about {
        table-layout: fixed

        td {
            padding: 6px
        }
    }

    .message .text {
        padding: 10px 10px 0px 10px
        text-align: center
    }

    .date-picker, .time-picker {
        display: none

        .controls {
            padding: 10px
            text-align: center

            .hour, .minute, .day, .month, .year {
                display: inline-block
                width: 32%

                > * {
                    display: block
                }
            }

            .value {
                display: inline-block
                color: dark-blue
            }
        }

        .up button {
            up_button(android-blue)
        }

        .down button {
            down_button(android-blue)
        }

        .up button, .down button {
            width: 100%

            &::before {
                vertical-align: bottom
            }
        }
    }
}
