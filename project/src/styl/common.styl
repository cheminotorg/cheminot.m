global-reset()

size(n) {
    n / 16 rem;
}

/* INPUT */

* {
    -webkit-touch-callout: none
    -webkit-user-select: none
}

body:not(.scrolling) .touching {
    transition: 0.4s
    background: blue !important
    color: #FFF !important

    .match {
        color: #FFF !important
    }
}

body[data-demo] {
  * {
      cursor: url("../images/touch-cursor.png") 16 10, default;
  }
}

input {
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
    -webkit-appearance: none
    padding-left: size(8px)
    box-sizing: border-box
    width: 100%
    color: dark-blue
    outline: none
    border: none

    &:focus {
        border-color: blue
    }

    &:disabled {
        background-color: #FFF
        opacity: 1 !important
    }
}

input[type=text] {
    height: size(66px)
    font-size: size(18px)
}

input::-webkit-input-placeholder {
    color: grey
    font-family-light()
}

input:-moz-placeholder {
    color: grey
    font-family-light()
}

input::-moz-placeholder {
    color: grey
    font-family-light()
}

input:-ms-input-placeholder {
    color: grey
    font-family-light()
}

/* LAYOUT */

html {
    height: 100%
    overflow: hidden
    font-size: 100%
}

body {
    overflow: hidden
    height: 100%
    width: 100%
    position: absolute
    -webkit-font-smoothing: antialiased
    text-rendering: optimizeLegibility
    font-family-light()
    font-size: 1em
}

h1 {
    font-family-bold()
}

#viewport {
    width: 100%

    .view.hidden {
        display: none
    }
}

.container {
    padding: size(8px)
}

.list {
    li {
        color: grey
        padding: 0 size(8px) 0 size(8px)
        border-bottom: size(2px) solid grey-blue
        box-sizing: border-box
        width: 100%
        display: flex
        align-items: center
        height: size(66px)
        font-size: size(18px)
    }
}

.font::before {
    font-size: size(24px);
}

global-margin-right=4%
