{
  "name": "Cheminot",
  "id": "org.cheminot",
  "description": "Consulter les horaires des trains hors ligne.",
  "version": "0.1.1",
  "platforms": [
    "browser@4.0.0",
    "android@4.1.1"
  ],
  "cordova": {
    "preferences": {
      "DisallowOverscroll": true,
      "EnableViewportScale": false,
      "KeyboardDisplayRequiresUserAction": false,
      "ShowSplashScreenSpinner": false,
      "HideKeyboardFormAccessoryBar": false,
      "SplashScreen": "screen",
      "BackgroundColor": "0xffffffff",
      "AutoHideSplashScreen": false,
      "KeyboardShrinksView": true,
      "KeepRunning": true,
      "SplashScreenDelay": 60000
    },
    "android": {
      "manifest": {
        "uses-permission": [
          {
            "$": {
              "android:name": "android.permission.VIBRATE"
            }
          },
          {
            "$": {
              "android:name": "android.permission.SEND_SMS"
            }
          }
        ]
      }
    },
    "accessOrigin": [
      "*",
      {
        "origin": "mailto:*",
        "external": true
      }
    ]
  },
  "author": {
    "name": "SÃ©bastien Renault",
    "email": "srenault.contact@gmail.com",
    "href": "https://github.com/srenault"
  },
  "check": {
    "android": "./project/bin/check_android.js",
    "browser": "./project/bin/check_browser.js"
  },
  "plugins": {
    "org.apache.cordova.splashscreen": "https://github.com/apache/cordova-plugin-splashscreen.git#r0.3.4",
    "m.cheminot.plugin": "https://github.com/srenault/m.cheminot.plugin.git",
    "com.danielcwilson.plugins.googleanalytics": "com.danielcwilson.plugins.googleanalytics#r0.6.1",
    "com.ionic.keyboard": "com.ionic.keyboard#r1.0.4"
  },
  "configurations": {
    "android": {
      "default": {
        "id": "m.cheminot",
        "product_name": "Cheminot mock",
        "product_file_name": "cheminot_mock"
      },
      "stage": {
        "id": "m.cheminot.stage",
        "product_name": "Cheminot stage",
        "product_file_name": "cheminot_stage",
        "hockeyapp_id": "2c23cacff1aa8bc1d9e54d908af747e4",
        "ga_id": "UA-60596605-2"
      },
      "prod": {
        "id": "m.cheminot.prod",
        "version": "0.2.1",
        "version_code": "000201",
        "product_name": "Cheminot",
        "product_file_name": "cheminot_prod",
        "release": true,
        "sign": "store",
        "ga_id": "UA-60596605-2"
      }
    },
    "browser": {
      "default": {
        "id": "m.cheminot",
        "product_name": "Cheminot mock",
        "product_file_name": "cheminot_mock",
        "ga_id": "UA-XXXXXXXX-X"
      },
      "demo": {
        "id": "m.cheminot",
        "product_name": "Cheminot demo",
        "product_file_name": "cheminot_demo",
        "ga_id": "UA-60596605-3"
      }
    }
  }
}